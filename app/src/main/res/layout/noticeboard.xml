<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026"
        app:srcCompat="@drawable/images_remo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="350dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/anoy_linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/anoy_linearLayout"
        app:layout_constraintStart_toStartOf="@+id/anoy_linearLayout"
        app:layout_constraintTop_toTopOf="@+id/anoy_linearLayout"
        app:srcCompat="@drawable/button_paleblue" />



    <LinearLayout
        android:id="@+id/anoy_linearLayout"
        android:layout_width="334dp"
        android:layout_height="83dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25">

        <android.widget.Button
            android:id="@+id/noticeToProfileButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="개인 프로필"
            android:onClick="noticeToProfileButton"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/button_white"
            android:backgroundTint="@null"
            />

        <android.widget.Button
            android:id="@+id/noticeButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="정보 게시판"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/button_orange"/>

        <android.widget.Button
            android:id="@+id/noticeToAnonyButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="익명 게시판"
            android:onClick="noticeToAnonyButton"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/button_white"/>
    </LinearLayout>


    <android.widget.Button
        android:id="@+id/search_badge"
        android:layout_width="48dp"
        android:layout_height="42dp"
        android:background="@drawable/icon_search"
        android:onClick="searchN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.957"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ListView
        android:id="@+id/noticeListView"
        android:layout_width="335dp"
        android:layout_height="366dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.822" />

    <android.widget.Button
        android:id="@+id/button3"
        android:layout_width="47dp"
        android:layout_height="43dp"
        android:background="@drawable/pen"
        android:onClick="goAddPostN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />


</androidx.constraintlayout.widget.ConstraintLayout>