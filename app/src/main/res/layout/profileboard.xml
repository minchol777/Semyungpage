<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026"
        app:srcCompat="@drawable/images_remo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="350dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/anoy_linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/anoy_linearLayout"
        app:layout_constraintStart_toStartOf="@+id/anoy_linearLayout"
        app:layout_constraintTop_toTopOf="@+id/anoy_linearLayout"
        app:srcCompat="@drawable/button_paleblue" />



    <LinearLayout
        android:id="@+id/anoy_linearLayout"
        android:layout_width="343dp"
        android:layout_height="83dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25">

        <android.widget.Button
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_weight="1"
            android:background="@drawable/button_orange"
            android:backgroundTint="@null"
            android:text="개인 프로필"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <android.widget.Button
            android:id="@+id/profileToNoticeButton"
            android:layout_width="wrap_content"
            android:layout_height="83dp"
            android:layout_weight="1"
            android:background="@drawable/button_white"
            android:text="정보 게시판"
            android:onClick="profileToNoticeButton"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <android.widget.Button
            android:id="@+id/profileToAnoyButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_white"
            android:text="익명 게시판"
            android:onClick="profileToAnoyButton"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로필 텍스트"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.473" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="355dp"
        android:layout_height="90dp"
        android:text="경고 - 서버 연결 실패시 출력되는 메시지 현제 프로필 부분이 불안정함 케이스 3번"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.642"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.62" />


</androidx.constraintlayout.widget.ConstraintLayout>